# Production Environment Configuration
# Database
DATABASE_URL=postgresql://scorecard_user:your_secure_password@localhost:5432/scorecard_prod

# Security
SECRET_KEY=your_super_secure_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=StackHealth Scorecard Platform
VERSION=2.0.0
DEBUG=false

# CORS Settings
ALLOWED_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=your_smtp_password

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# File Storage (for PDF reports)
STORAGE_TYPE=s3
S3_BUCKET_NAME=scorecard-reports
S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
